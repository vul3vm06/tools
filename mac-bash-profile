if [ -f ~/.bashrc ]; then
  source ~/.bashrc
fi

aroot()
{
  [[ $(adb shell id -u -n) != "root"* && $(adb shell id -u -n) != "uid=0(root)"* ]] && adb root || echo "Already root. skip"
}

adbsetup()
{
  adb wait-for-device; sleep 3; adb root; sleep 3; adb remount; adb logcat -G 256K; adb shell date `date +%m%d%H%M%Y.%S`;
}

